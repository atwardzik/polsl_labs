<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="720.0" stylesheets="@app.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bugtracker2.HelloController">
    <left>
        <VBox id=".sidebar" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="72.0" spacing="18.0" styleClass="sidebar" stylesheets="@app.css" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="userButton" mnemonicParsing="false" onAction="#onUserButtonClicked" styleClass="icon-btn" stylesheets="@app.css" text="A" textFill="WHITE" />
                <Button fx:id="issuesButton" mnemonicParsing="false" onAction="#onIssuesButtonClick" styleClass="icon-btn" text="B" textFill="WHITE" />
                <Button fx:id="filterButton" mnemonicParsing="false" onAction="#onFilterButtonClick" styleClass="icon-btn" text="C" textFill="WHITE" />
                <Button fx:id="newButton" mnemonicParsing="false" onAction="#onNewButtonClick" styleClass="icon-btn" text="D" textFill="WHITE" />
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </VBox>
    </left>
    <center>
        <HBox fx:id="rightSidePane" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
