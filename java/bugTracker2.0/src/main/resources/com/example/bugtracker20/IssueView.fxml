<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<HBox fx:id="issueViewScene" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bugtracker20.IssueViewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="authorLabel" text="Author:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="JetBrains Mono Regular" size="12.0" />
               </font>
            </Label>
            <HBox>
               <children>
                  <Label fx:id="dateOpenedLabel" text="Opened on:">
                     <font>
                        <Font name="JetBrains Mono Regular" size="12.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="dueDateLabel" text="Due on:">
                     <HBox.margin>
                        <Insets bottom="5.0" left="50.0" right="10.0" top="5.0" />
                     </HBox.margin>
                     <font>
                        <Font name="JetBrains Mono Regular" size="12.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="statusLabel" text="Status:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="JetBrains Mono Regular" size="12.0" />
               </font>
            </Label>
            <Label fx:id="priorityLabel" text="Priority:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="JetBrains Mono Regular" size="12.0" />
               </font>
            </Label>
            <Label fx:id="titleLabel" text="Title:">
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="JetBrains Mono Bold" size="16.0" />
               </font>
            </Label>
            <WebView fx:id="descriptionWebView" styleClass="issue-description" stylesheets="@app.css" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </WebView>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#backBtnClicked" text="Back">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="editIssueBtn" mnemonicParsing="false" onAction="#editIssueBtnClicked" text="Edit">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="assignBtn" mnemonicParsing="false" onAction="#assignBtnClicked" text="Assign">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Label text="Current status: ">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="statusComboBox" prefWidth="150.0">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
