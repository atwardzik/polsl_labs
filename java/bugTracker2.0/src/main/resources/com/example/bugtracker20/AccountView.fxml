<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bugtracker20.AccountController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" stylesheets="@app.css" VBox.vgrow="ALWAYS">
               <children>
                  <StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="100.0" styleClass="photo-box" HBox.hgrow="NEVER">
                     <HBox.margin>
                        <Insets bottom="10.0" left="50.0" right="10.0" top="20.0" />
                     </HBox.margin>
                     <children>
                        <ImageView fx:id="profilePhoto" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true">
                           <image>
                              <Image url="@defaultPhoto.png" />
                           </image>
                        </ImageView>
                     </children>
                  </StackPane>
                  <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="surnameLabel" text="Surname">
                           <font>
                              <Font name="JetBrains Mono SemiBold" size="24.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="5.0" left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="nameLabel" text="Name">
                           <font>
                              <Font name="JetBrains Mono Regular" size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="usernameLabel" text="\@">
                           <font>
                              <Font name="JetBrains Mono Regular" size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="roleLabel" text="Role:">
                           <font>
                              <Font name="JetBrains Mono Regular" size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="15.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="activeSinceLabel" text="Active since:">
                           <font>
                              <Font name="JetBrains Mono Regular" size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="lastSeenAtLabel" text="Last seen at:">
                           <font>
                              <Font name="JetBrains Mono Regular" size="13.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <TableView fx:id="tableView" prefHeight="300.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="issueTitleCol" editable="false" minWidth="100.0" prefWidth="75.0" text="Issue Title" />
                <TableColumn fx:id="dueDateCol" editable="false" prefWidth="75.0" text="Due Date" />
                  <TableColumn fx:id="statusCol" prefWidth="75.0" text="Status" />
                  <TableColumn fx:id="reporterCol" editable="false" prefWidth="75.0" text="Reporter" />
              </columns>
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="5.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</HBox>
